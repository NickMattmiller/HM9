@model StudentExample.Models.HotDogProfile

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="page-header">
        <h1>Hot Dog Profile</h1>    <button type="button" class="btn btn btn-lg btn-warning">@Html.ActionLink("Edit", "Edit", new { id = Model.Id })</button>   <button type="button" class="btn btn-lg btn-warning">@Html.ActionLink("Back to List", "Index")</button>
    </div>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
   
    <div class="row">
        <div class="col-md-4">
            <img src="@Html.DisplayFor(model => model.Pic)" style="height:75% ; width:75%" />
            <h3>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)</h3>

            <h3>Favorite Dogs</h3>
            <ul>
                <br />
                <li><h4>Favorite Meat</h4></li>
                <li>@Html.DisplayFor(model => model.Favorite_Meat)</li>
                <li><h4>Favorite Bun</h4></li>
                <li>@Html.DisplayFor(model => model.Favorite_Meat)</li>
            </ul>
        </div>
        <div class="col-md-1">
           
        </div>
        <h3>@Html.DisplayNameFor(model => model.Bio)</h3>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.Bio)
        </div>
      
    </div>
</div>
